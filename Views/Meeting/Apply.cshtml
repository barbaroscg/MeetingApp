@{
    ViewBag.Title = "Katılım Formu";
}

<h1 class="text-center">Toplantı Katılım Formu</h1>
<form  method="post" action="/Meeting/Apply">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" id="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Telefon</label>
        <input type="text" name="Phone" id="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">E-Posta</label>
        <input type="text" name="Email" id="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label for="WillAttend" class="form-label">Katılım Durumu</label>
        <select name="WillAttend" id="WillAttend" class="form-select">
            <option value="true">Evet, Katılıyorum</option>
            <option value="false">Hayır, Katılmıyorum</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>